<script>
    $(document).ready(function(e){
        init(e);
        function renderAll(){
            show_content();
            $('#top_nav_centre_info').addClass('active_yellow')
            $('#feedback_form').submit(function(e){
                verify_captcha();
                e.preventDefault();
                if($('#subject').val() != null){
                    var data = {}
                    $.post("http://dixieoutlet.mallmaverick.com/email_feedback", $(this).serialize(), function(data, status, xhr){
                        if(status == "success"){
                            $("#success_subscribe").fadeIn();
                            $('#form_div').hide();
                            $('#feedback_form').trigger('reset');
                        }
                        else{
                            alert("Unable to process your request. Please try again later.")
                        }
                    });
                }
                else{
                    alert("Please select subject.")
                }
            });
        }
        loadMallDataCached(renderAll); 
    })
</script>