<div class="margin_40"></div>
<script>
    $(document).ready(function(e){
        init(e);
        function renderAll(){
            var events = getEventsList().sortBy(function(o){ return o.start_date });
            var published_events = [];
            $.each( events , function( key, val ){
                today = new Date();
                webDate = new Date(val.show_on_web_date)
                if (today >= webDate) {
                    published_events.push(val)
                } 
            });
            if(published_events.length > 0){
                renderEvents("#jobs_container","#jobs_template", published_events);
            }
            else{
                $('#no_events').show()
            }
            
            
            show_content();
            $('#top_nav_events').addClass('active_yellow')
        }
        loadMallDataCached(renderAll); 
    })
</script>