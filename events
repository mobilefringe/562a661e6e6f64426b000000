        <div id="jobs_container">
            <script id="jobs_template" type="x-tmpl-mustache/text">
                <div class="col-md-6 margin_50">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="logo_container">
                                <img src="{{logo}}" alt="Promotion" class="" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h3 class="details_header">{{name}}</h3>
                            <h3 class="details_store_name">{{store_name}}</h3>
