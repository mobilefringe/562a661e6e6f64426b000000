<script>
    $(document).ready(function(e){
        init(e);
        function renderAll(){
            var pathArray = window.location.pathname.split( '/' );
            var slug = pathArray[pathArray.length-1];
            
            // if(slug.indexOf("dixieoutlet-dixie-prize-locker") > -1) {
            //     $("#remarketing_tag").show();
            // }
            // else {
            //     $("#remarketing_tag").hide();
            // }

            var event_details = getEventDetailsBySlug(slug);
            renderEventDetails('#promo_details_container', '#promo_details_template', event_details)
            renderEventDetails('#promo_details_container_2', '#promo_details_template_2', event_details)
            if (slug.indexOf("dixieoutlet-dixie-play-days") > -1){
                $(".promo_details_image").hide();
            } else {
                $(".promo_details_image").show();
            }
            show_content();
            console.log(slug)
            
            
            
            $('#top_nav_events').addClass('active_yellow')
        }
        loadMallDataCached(renderAll); 
    })
</script>