<script>
    $(document).ready(function(e){
        init(e);
        function renderAll(){
            var pages_json = '//dixieoutlet.mallmaverick.com/pages/dixieoutlet-gift-cards.json';
            $.getJSON(pages_json).done(function(data) {
                $('#mm_page_content').html(data.body);
            }).fail(function(jqXHR) {
                if (jqXHR.status == 404) {
                    $("#404_msg").fadeIn("fast");
                }
            }); 
            
            show_content();
            $('#top_nav_about_us').addClass('active_yellow')
        }
        loadMallDataCached(renderAll); 
    })
</script>