<script>
    $(document).ready(function(e){
        init(e);
        function renderAll(){
            var pathArray = window.location.pathname.split( '/' );
            var slug = pathArray[pathArray.length-1];
            prefix = get_prefix();
            var pages_json = '//dixieoutlet.mallmaverick.com/pages/dixieoutlet-living-room-about.json'
            $.getJSON(pages_json).done(function(data) {
                $('#mm_page_title').html(data.title);
                $('#mm_page_content').html(data.body);
            }).fail(function(jqXHR) {
                if (jqXHR.status == 404) {
                    $("#404_msg").fadeIn("fast");
                }
            }); 
            var gallery_images = getFashionBySlug("dixieoutlet-living-room").fashion_images;
            renderGallery("#gallery", "#gallery_template", gallery_images);
            show_content();
            $('#gallery').slick({
                infinite: false,
                slidesToShow: 4,
                slidesToScroll: 1,
                responsive: [
                    {
                        breakpoint: 1024,
                        settings: {
                            slidesToShow: 1,
                            slidesToScroll: 1,
                            infinite: true
                        }
                    }
                ]
            });
            
            
            $('#top_nav_livingroom').addClass('active_yellow')
        }
        loadMallDataCached(renderAll); 
    })
</script>