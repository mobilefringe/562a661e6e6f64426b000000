<script>
    $(document).ready(function(e){
        init(e);
        function renderAll(){
            prefix = get_prefix();
            var pages_json = prefix + '/pages/dixieoutlet-livingroom-book-this-space.json'
            $.getJSON(pages_json).done(function(data) {
                console.log(pages_json)
                $('#mm_page_title').html(data.title);
                $('#mm_page_content').html(data.body);
            }).fail(function(jqXHR) {
                if (jqXHR.status == 404) {
                    $("#404_msg").fadeIn("fast");
                }
            }); 
            
            show_content();
            var date=new Date();
            var year=date.getFullYear();
            var month=date.getMonth();
            var day = date.getDate();
            
            $('.datepicker').datepicker({
                startDate: new Date(year, month, day),
                endDate: new Date(year, month+3, 0)
            });
            $('.timepicker').timepicker();
            $.validate();
            $('#top_nav_livingroom').addClass('active_yellow');
            
            $('#livingroom_form').submit(function(e){
                e.preventDefault();
                $('#send_to_user').val($('#email').val());
                var data = $(this).serialize();
                $.getJSON("//dixieoutlet.mallmaverick.com/send_prop_admin_and_user_email", data, function(data, textStatus, jqXHR){
                    if(textStatus = "success"){
                        $('#livingroom_form').trigger('reset');
                        $('<div class="modal-backdrop custom_success_backdrop">').appendTo(document.body);
                        $('#success_modal').fadeIn();
                        $('#close_btn').click(function(){
                            $('.custom_success_backdrop').remove();
                            $('#success_modal').fadeOut();
                        });
                    }
                    else{
                        alert("Error submitting form. Please try again later.")
                    }
                });
                
                
            })
        }
        loadMallDataCached(renderAll); 
    });
    
    function submit_form(data){
        
    }
    
    
</script>