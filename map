        <div class="margin_40"></div>
        <div class="col-md-12">
            <select id="store_select_container" class="form-control select_store" onchange="javascript:drop_pin(this.value)">
                <script id="store_select_template" type="x-tmpl-mustache/text">
                    <option value='{{svgmap_region}}/{{slug}}'>{{name}}</option>
                </script>
            </select>
            
        </div>
    </div>
