<link rel="stylesheet" href="http://cdn.mallmaverick.com/javascripts/gallery/slimbox/slimbox2.css" type="text/css" media="screen" />
<script type="text/javascript" src="http://cdn.mallmaverick.com/javascripts/mapsvg/jquery.js"></script>
<script type="text/javascript" src="http://cdn.mallmaverick.com/javascripts/mapsvg/raphael.js"></script>
<script type="text/javascript" src="http://cdn.mallmaverick.com/javascripts/mapsvg/jquery.mousewheel.js"></script>
<script type="text/javascript" src="http://cdn.mallmaverick.com/system/site_images/photos/000/005/107/original/mallmaverick_svgmap.js?1412885524"></script>
<script>
    $(document).ready(function(e){
        init(e);
        function renderAll(){
            var pathArray = window.location.pathname.split( '/' );
            var slug = pathArray[pathArray.length-1];
            var store_details = getStoreDetailsBySlug(slug);
            renderStoreDetails("#store_details_container","#store_details_template", store_details, slug);
            renderStoreDetails("#details_container","#details_template", store_details, slug);
            var hour_ids = store_details.store_hours;
            if (hour_ids.length > 0){
                var hours = (getHoursForIds(hour_ids));
                renderStoreDetailsHours('#reg_hours_container','#reg_hours_template', hours, 'reg_hours');
            }
            else{
                $('#hours').hide();
            }
            
            var store_promo_ids = store_details.promotions
            if( store_promo_ids.length > 0){
                var store_promos = getPromotionsForIds(store_promo_ids).sortBy(function(o){ return o.start_date });;
                renderPromotions("#promos_container","#promos_template", store_promos);
            }
            else{
                $('#promotions').hide();
            }
            
            var store_job_ids = store_details.jobs
            if( store_job_ids.length > 0){
                var store_jobs = getJobsForIds(store_job_ids).sortBy(function(o){ return o.start_date });;
                renderJobs('#jobs_container', '#jobs_template', store_jobs);
            }
            else{
                $('#employment').hide();
            }
            show_content();
            $('#top_nav_stores').addClass('active_yellow')
            regions = {};
            var stores = getStoresList();
            $.each( stores , function( key, val ) {
                if(val.svgmap_region != null && typeof(val.svgmap_region)  != 'undefined'){
                    obj = {};
                    obj["tooltip"] = "<div class='tooltip_div'><p class='tooltip_name'>"+val.name+"</p></div>"
                    obj["attr"] = {}
                    obj["attr"]["href"] = "/stores/"+val.slug
                    regions[val.svgmap_region] = obj
                }
            });
            load_map(regions, store_details)
            
        }
        loadMallDataCached(renderAll); 
    })
</script>